{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Ellora",
  "version": "0.1.0",
  "identifier": "com.ellora.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm run dev",
    "beforeBuildCommand": "pnpm run build && cd ai-gateway && make gateway_mac_m1"
  },
  "app": {
    "windows": [
      {
        "title": "Ellora - AI Gateway",
        "width": 1280,
        "height": 900,
        "minWidth": 1024,
        "minHeight": 768,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": false
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "../ai-gateway/target/release/ai-gateway",
      "../ai-gateway/config.yaml",
      "../ai-gateway/.env"
    ]
  }
}
