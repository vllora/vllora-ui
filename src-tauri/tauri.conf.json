{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Ellora",
  "version": "0.1.0",
  "identifier": "com.ellora.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm run dev",
    "beforeBuildCommand": "pnpm run build && cd ai-gateway && make gateway_mac_m1 && cp target/aarch64-apple-darwin/release/ai-gateway target/aarch64-apple-darwin/release/ai-gateway-aarch64-apple-darwin"
  },
  "app": {
    "windows": [
      {
        "title": "Ellora - AI Gateway",
        "width": 1280,
        "height": 900,
        "minWidth": 1024,
        "minHeight": 768,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "visible": false
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self'",
        "connect-src": [
          "'self'",
          "http://localhost:8080",
          "http://localhost:8081",
          "http://localhost:8082",
          "http://localhost:8083",
          "http://localhost:8084",
          "http://localhost:8085",
          "http://localhost:8086",
          "http://localhost:8087",
          "http://localhost:8088",
          "http://localhost:8089",
          "http://localhost:8090"
        ],
        "script-src": ["'self'", "'unsafe-inline'", "'wasm-unsafe-eval'"],
        "style-src": ["'self'", "'unsafe-inline'"],
        "img-src": ["'self'", "data:", "https:", "http:"],
        "font-src": ["'self'", "data:"]
      }
    },
    "withGlobalTauri": false
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "../ai-gateway/target/aarch64-apple-darwin/release/ai-gateway"
    ],
    "resources": [
      "../ai-gateway/.env",
      "../ai-gateway/config.yaml"
    ]
  }
}
